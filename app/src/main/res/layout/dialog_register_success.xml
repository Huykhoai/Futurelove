<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="40dp"
    android:padding="20dp"
    android:background="@drawable/border_dialog"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_dialog"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/register_success" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Register Success"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#424141"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv1_desc_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Please check your email to authenticate!"
        android:textAlignment="center"
        android:textColor="#FF00"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tv2_desc_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:text="Then, Login Now"
        android:textAlignment="center"
        android:textColor="#009688"
        android:textSize="14sp" />



</LinearLayout>
